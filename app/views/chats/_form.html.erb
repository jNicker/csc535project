<%= simple_form_for @chat, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :users, label_method: :username, collection: User.without_user(current_user), input_html: { class: 'chosen-select'} %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', chats_path, :class => 'btn btn-default' %>
<% end %>
