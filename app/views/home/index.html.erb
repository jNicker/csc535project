<div class='row'>

  <div class='col-md-8'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        Your Directed Converstaions
      </div>
      <div class='panel-body'>
        <table class='table table-striped table-condensed'>
          <thead>
            <tr>
              <th>with</th>
              <th>updated</th>
              <th>created</th>
            </tr>
          </thead>
          <tbody>
            <% @chats.each do |chat| %>
              <tr>
                <td><%= chat.users.without_user(current_user).pluck(:username).join(', ') %></td>
                <td><%= time_ago_in_words(chat.updated_at) %> ago</td>
                <td><%= time_ago_in_words(chat.created_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class='panel-footer'>
        <%= link_to 'New Chat', new_chat_path, class: 'btn btn-primary btn-block' %>
      </div>
    </div>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        Global Chat
      </div>
      <div class='panel-body'>
        TODO
      </div>
      <div class='panel-footer'>
        <%= simple_form_for @message, remote: true do |f| %>
          <%= f.input :body, placeholder: 'Your Message Here!', label: false, as: :string %>
          <%= f.button :submit, 'Fire and Forget', class: 'btn btn-block btn-primary' %>
        <% end %>
      </div>
    </div>

  </div>

  <div class='col-md-4'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        Who's Online
      </div>
      <div class='panel-body'>
        <table class='table table-striped table-condensed'>
          <% @logged_in_users.each do |user| %>
            <tr>
              <td><%= link_to user.username, user %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

  </div>

</div>

