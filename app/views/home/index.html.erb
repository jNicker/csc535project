<% if current_user %>
  <%= javascript_tag do %>
    var this_user = <%= raw @this_user.to_json %>;
    var online_users = <%= raw @online_users.to_json %>;
  <% end %>
<% end %>
<div class='row'>

  <div class='col-sm-4'>
    <div class='panel panel-default'> <!-- Whos Online -->
      <div class='panel-heading'>
        Who's Online
      </div>
      <div class='panel-body'>
        <ul class='list-group' data-bind='foreach: online_users'>
          <li class='list-group-item' data-bind='css: { disabled: is_available() == false } '>
            <div class='clearfix'>
              <span data-bind='text: username'></span>
              <span class='pull-right'>
                <a href='#' class='btn btn-default btn-xs'>
                  Email
                  <span class='glyphicon glyphicon-envelope'></span>
                </a>
                <a href='#' class='btn btn-default btn-xs' data-bind='click: $parent.startLocalChat, css: { disabled: is_available() == false } '>
                  Chat
                  <span class='glyphicon glyphicon-pencil'></span>
                </a>
              </span>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>



  <div class='col-sm-8'>
    <div class='panel panel-default' data-bind="visible: current_user().is_available() === false"> <!-- Chat -->
      <div class='panel-heading'>
        <span data-bind='text: to_user_name'></span>
        <span class='glyphicon glyphicon-remove-sign pull-right' data-bind='click: $root.stopLocalChat'></span>
      </div>
      <div class='panel-body' style="height: 300px; overflow-y: scroll">
        <ul class='media-list' data-bind='foreach: messages'>
          <li class='media'>
            <span class='media-object pull-left' data-bind='text: from_user'>
            </span>
            <div class='media-body'>
              <span data-bind='text: body'></span>
              <small class='text-muted pull-right' data-bind='text: time_ago'></small>
            </div>
            <hr/>
          </li>
        </ul>
      </div>
      <div class='panel-footer'>
        <%= simple_form_for @new_message, url: home_index_path, remote: true do |f| %>
          <input type='hidden' name='message[from_user]' data-bind='value: current_user().id'/>
          <input type='hidden' name='message[to_user]' data-bind='value: to_user_id' />
          <%= f.text_field :body, class: 'form-control', required: true, maxlength: 2000 %>
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>

</div>


